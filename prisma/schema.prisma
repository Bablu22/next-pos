generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  category    String
  image       String
  price       Int
  quantity    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Customer {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  email   String @unique
  phone   String
  street  String
  city    String
  state   String
  zipCode String
  country String
}
